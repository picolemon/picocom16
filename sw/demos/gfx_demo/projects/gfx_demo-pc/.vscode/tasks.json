{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "linux": {
                "command": "./scripts/build.sh"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(/d+):(/d+):/s+(warning|error):/s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "dependsOn": [
                "build-assets",                
            ]                    
        },
        {
            "label": "clean",
            "type": "shell",
            "linux": {
                "command": "./scripts/clean.sh"
            }
        },
        {
            "label": "build-assets",
            "type": "shell",
            "linux": {
                "command": "./scripts/assets.sh"
            }
        }
    ]
}